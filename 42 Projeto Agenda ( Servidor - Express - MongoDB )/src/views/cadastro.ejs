<%- include('includes/head'); %> 
<%- include('includes/navBar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-2">
      <h1 class="text-center">Cadastro de Contatos</h1>
      <p class="text-center lead">Preencha todas as informações do seu contato.</p>

      <div>
        <form action="/contato/register" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group mb-3">
            <label for="contatoName" class="form-label">Nome do Contato:</label>
            <input
              type="text"
              class="form-control border border-primary"
              name="contatoName"
              id="contatoName"
              required
            />
          </div>
          <div class="form-group mb-3">
            <label for="contatoLastName" class="form-label">Sobrenome do Contato:</label>
            <input
              type="text"
              class="form-control border border-primary"
              name="contatoLastName"
              id="contatoLastName"
            />
          </div>
          <div class="form-group mb-3">
            <label for="phoneContato" class="form-label">Telefone:</label>
            <input
              type="tel"
              class="form-control border border-primary"
              name="phoneContato"
              id="phoneContato"
              placeholder="(99) 9 9999-9999"
            />
          </div>
          <div class="form-group mb-3">
            <label for="emailContato" class="form-label">E-mail:</label>
            <input
              type="email"
              class="form-control border border-primary"
              name="emailContato"
              id="emailContato"
            />
          </div>

      </div>

        <%- include('includes/messagesRegister') %>

        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>
