<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-2">

            <h1 class="display-5 text-center">
                Criar Conta ou Entrar
            </h1>
            <p class="text-center lead">
                Faça seu login ou crie sua conta abaixo
            </p>

            <div class="row">

                <div class="col-lg">
                    <h4 class="text-center">Faça seu Cadastro</h4>
                    <p class="text-center">Se você ainda não possui uma conta, preencha o Formulário abaixo: </p>
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group mb-3">
                          <label>Seu E-mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group  mb-3">
                            <label>Sua Senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary">Criar Minha Conta</button>
                      </form>
                </div>

                <div class="col-lg my-3">
                    <h4 class="text-center">Entrar no sistema</h4>
                    <p class="text-center">Se já possuí conta, entre aqui</p>
                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group mb-3">
                          <label>Seu E-mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group  mb-3">
                            <label>Sua Senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>

                </div>

            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>